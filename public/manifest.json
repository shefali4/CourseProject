{
  "name": "Page Mark",
  "description": "Page Rank on Bookmarks",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Page Marker"
  },
  "icons": {

  },
  "background": {
    "scripts": [ "background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": [
      "./content.js"
    ],
    "run_at": "document_end"
  }],
  "permissions" : [
    "activeTab",
    "contextMenus"
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}